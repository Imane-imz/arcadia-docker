{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block content %}

<div class="text-center m-4">
    <h1>Avis</h1>

    <div class="container">
        <div class="row">
        {% for avis in avis %}
            <div class="col-12 col-md-6 col-lg-4 p-3">
                <div class="card">
                        <div class="card-body">
                            <h4 class="mb-1">{{ avis.pseudo }}</h4>
                            <p class="mb-1">{{ avis.avis }}</p>
                        </div>
                </div>
            </div>
                {% else %}
                <p>Aucun enregistrement en base de donn√©es.</p> 
            {% endfor %}
        </div>
    </div>

    <div>
        <a class="btn bg_primary text-white m-4" href="avis/new">Laisser un avis</a>
    </div>

</div>
{% endblock %}
