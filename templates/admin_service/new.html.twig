{% extends 'base.html.twig' %}

{% set action = app.current_route == 'app_admin_service_new' ? 'Ajout' : 'Édition' %}

{% block title %}{{ action }} de services{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="w-50 m-auto">
        <div class="example-wrapper">
            <h1 class="d-flex justify-content-center">Ajout de services</h1>
                
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        {{ form_row(form.nom, {label: 'Intitulé du service'}) }}
                        {{ form_row(form.description, {label: 'Description'}) }}
                        {{ form_row(form.confirmation) }}
                    {{ form_widget(form) }}
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn bg_primary text-white">Valider</button>
                    </div>
                    {{ form_end(form) }}
                 
           
        </div>
    </div>
{% endblock %}
